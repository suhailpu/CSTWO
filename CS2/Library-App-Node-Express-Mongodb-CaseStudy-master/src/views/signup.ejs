        <label for="error" id="error"></label>
        
        <br>

        <input type = "text" name='mobile' id="mobile" placeholder="Mobile Number" required maxlength="12"  >
        <br>
        <p5 style="color:rgb(195, 174, 79)" >Input a Valid Phone No. [ 1234567891, 123-456-7891, 123.456.7891, 123 456 7891]</p5>
        <br>
        <label for="errormobile" id="errormobile"></label><br>
        <label for="birthday" style="color: #292b2c;" ></label>Date of Birth:</label><br>
        <input type="date" name="dob" id="birthday" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;" name="birthday" required>
        <br><br>
        
        Select Gender:<br>

        <label>
          <input type="radio" name="gender" value="male" >
          Male
        </label><br>
      
        <label>
          <input type="radio" name="gender" value="female" required >
          Female
        </label><br>
      
        <label>
          <input type="radio" name="gender" value="other" >
          Other
          <br><br>
        <input type = "text" name="username" id="uname" placeholder="User Name" required pattern="[^' ']+" >
        <label for="errorusername" id="errorusername"></label><br><br>

        <input type = "password" name="password" id="pass" placeholder="Password" required maxlength="15" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
        <br>
        <p5 style="color:rgb(195, 174, 79)"> Minimum 8 characters, at least one uppercase and one lower case, must contain at least one number</p5>

        <br><br>
            
        <p5 class="strength" id="length"></p5>
        <br>

        <input type = "password" id="pass2" placeholder="Re-Enter Password" required maxlength="15" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">   
        <br>
        <label for="errorpass" id="errorpass"></label><br><br>
        <div class="form-group login-group-checkbox">
