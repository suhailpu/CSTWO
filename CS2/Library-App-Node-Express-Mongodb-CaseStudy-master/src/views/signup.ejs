  <div class="wrap">
    
    <form method="POST"  action="/signup/newsignup" >
        
       <input type = "text" id="name" name="fullname" placeholder="Full Name" required pattern="[A-Za-z0-9 _]*[A-Za-z0-9]">
       
       
